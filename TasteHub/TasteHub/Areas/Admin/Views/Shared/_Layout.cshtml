<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TasteHub</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TasteHub.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3" style="background-color: #fc9f74">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="Admin" asp-controller="Home" asp-action="AllUsers">
                    <img src="~/images/Logo.png" class="rounded float-start" style="width: 100px;" alt="Image" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item d-flex dropdown">
                            <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Admin
                            </a>
                            <ul class="dropdown-menu" style="background-color: #fc9f74">
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-area="Admin" asp-controller="Home" asp-action="AllUsers">Users</a>
                                </li>     
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-area="Admin" asp-controller="Home" asp-action="AllQueries">Queries</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-area="Admin" asp-controller="Home" asp-action="AllRoles">Roles</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-area="Admin" asp-controller="Category" asp-action="AllCategories">Categories</a>
                                </li>
                            </ul>                       
                        </li>
                        <li class="nav-item d-flex dropdown">
                            <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Add New
                            </a>
                            <ul class="dropdown-menu" style="background-color: #fc9f74">
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-area="Admin" asp-controller="Category" asp-action="AddCategory">Category</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-area="Admin" asp-controller="Home" asp-action="AddRole">Role</a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="User" asp-controller="Recipe" asp-action="AllRecipes">Recipes</a>
                        </li>
                    </ul>
                    <partial name="_MenuPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Today.Year - TasteHub
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
