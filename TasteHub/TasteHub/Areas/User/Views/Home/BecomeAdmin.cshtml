@model QueryFormModel
@{
    ViewBag.Title = "Become Admin";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<form asp-controller="User" asp-action="BecomeAdmin" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" placeholder="Why do you want to be an Admin...">
        <span asp-validation-for="Description" class="small text-danger"></span>
    </div>
    <div class="text-center">
        <input class="btn btn-primary mt-3" type="submit" value="Send" />
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

