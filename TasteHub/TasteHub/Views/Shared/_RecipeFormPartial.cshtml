@model RecipeFormViewModel

<form asp-controller="Recipe" asp-action="AddRecipe" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="@Model.Id" />
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" placeholder="Title...">
        <span asp-validation-for="Title" class="small text-danger"></span>
    </div>
    <br/>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" rows="4" class="form-control" placeholder="Two bedrooms..."></textarea>
        <span asp-validation-for="Description" class="small text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="Ingredients"></label>
        <textarea asp-for="Ingredients" rows="4" class="form-control" placeholder="Address..."></textarea>
        <span asp-validation-for="Ingredients" class="small text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="Instructions"></label>
        <textarea asp-for="Instructions" rows="4" class="form-control" placeholder="Two bedrooms..."></textarea>
        <span asp-validation-for="Instructions" class="small text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="CategoryId"></label>
        <select asp-for="CategoryId" class="form-control">
            @foreach (var category in Model.Categories)
            {
                <option value="@category.Id">@category.Name</option>
            }
        </select>
        <span asp-validation-for="CategoryId" class="small text-danger"></span>
    </div>    
    <br />
    <label>Image:</label>
    <input type="file" name="ImageFile" accept="image/*"/>


    <div class="text-center">
        <input class="btn btn-primary mt-3" type="submit" value="Save" />
    </div>
</form>