@model RoleFormModel
@{
    ViewBag.Title = "Add Role";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<form asp-controller="Admin" asp-action="AddRole" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" placeholder="Admin...">
        <span asp-validation-for="Name" class="small text-danger"></span>
    </div>
    <div class="text-center">
        <input class="btn btn-primary mt-3" type="submit" value="Add" />
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


