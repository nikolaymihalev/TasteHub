@model RatingFormModel
@{
    ViewBag.Title = "Edit Rating";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<form asp-controller="Rating" asp-action="EditRating" method="post" enctype="multipart/form-data">
    <div class="text-center">
        <img src="~/images/stars/1.png" class="rounded mx-auto d-block" alt="Image" />
        <input asp-route-value="1" asp-route-recipeId="@Model.RecipeId" class="btn btn-info" type="submit" value="Rate with 1 star" />
    </div>
    <div class="text-center">
        <img src="~/images/stars/2.png" class="rounded mx-auto d-block" alt="Image" />
        <input asp-route-value="2" asp-route-recipeId="@Model.RecipeId" class="btn btn-info" type="submit" value="Rate with 2 stars" />
    </div>
    <div class="text-center">
        <img src="~/images/stars/3.png" class="rounded mx-auto d-block" alt="Image" />
        <input asp-route-value="3" asp-route-recipeId="@Model.RecipeId" class="btn btn-info" type="submit" value="Rate with 3 stars" />
    </div>
    <div class="text-center">
        <img src="~/images/stars/4.png" class="rounded mx-auto d-block" alt="Image" />
        <input asp-route-value="4" asp-route-recipeId="@Model.RecipeId" class="btn btn-info" type="submit" value="Rate with 4 stars" />
    </div>
    <div class="text-center">
        <img src="~/images/stars/5.png" class="rounded mx-auto d-block" alt="Image" />
        <input asp-route-value="5" asp-route-recipeId="@Model.RecipeId" class="btn btn-info" type="submit" value="Rate with 5 stars" />
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}